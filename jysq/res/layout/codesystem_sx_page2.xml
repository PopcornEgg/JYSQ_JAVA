<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="选择范围"
        android:textColor="@color/font_color_gray"
        android:textSize="@dimen/Text_size_big_1" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/title"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/title"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button1_f9"
        android:tag="0"
        android:text="000-09"
        android:textColor="@color/def_background"
        android:textSize="@dimen/Text_size_big_1" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/Button01"
        android:layout_alignLeft="@+id/Button01"
        android:layout_alignRight="@+id/Button01"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button1_f9"
        android:tag="1"
        android:text="0-49"
        android:textColor="@color/def_background"
        android:textSize="@dimen/Text_size_big_2" />

    <Button
        android:id="@+id/Button05"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Button04"
        android:layout_alignLeft="@+id/Button04"
        android:layout_alignRight="@+id/Button04"
        android:layout_below="@+id/title"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button1_f9"
        android:tag="4"
        android:text="全部"
        android:textColor="@color/def_background"
        android:textSize="@dimen/Text_size_big_3" />

    <Button
        android:id="@+id/Button03"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/Button02"
        android:layout_alignLeft="@+id/Button02"
        android:layout_alignRight="@+id/Button02"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button1_f9"
        android:tag="2"
        android:text="50-99"
        android:textColor="@color/def_background"
        android:textSize="@dimen/Text_size_big_2" />

    <Button
        android:id="@+id/Button04"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_above="@+id/Button03"
        android:layout_alignLeft="@+id/Button03"
        android:layout_alignRight="@+id/Button03"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button1_f9"
        android:tag="3"
        android:text="0-99"
        android:textColor="@color/def_background"
        android:textSize="@dimen/Text_size_big_2" />

</RelativeLayout>