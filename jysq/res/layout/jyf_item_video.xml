<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:adjustViewBounds="true"
        android:baselineAlignBottom="false"
        android:cropToPadding="false"
        android:maxHeight="100dp"
        android:src="@drawable/video4" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img"
        android:layout_margin="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/img"
        android:gravity="center_vertical"
        android:text="视频入门"
        android:textColor="#FF000000"
        android:textSize="@dimen/Text_size_middle_1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/info"
        android:layout_below="@+id/info"
        android:layout_marginRight="10dp"
        android:text="通过学习这十八节视频教学，完成对记忆法的基本入门，为记忆提升训练打下坚实的理论基础。"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/font_color_gray"
        android:textSize="@dimen/Text_size_small_0" />

    <RelativeLayout
        android:id="@+id/progress_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="10dp" >
        
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="进度"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/font_color_gray"
                android:textSize="@dimen/Text_size_small_0" />
            
                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_alignRight="@+id/textView2"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="50dp"
                    android:max="100"
                    android:progress="35" />

            <TextView
                android:id="@+id/protxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:text="35%"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/font_color_gray"
                android:textSize="@dimen/Text_size_small_0" />

    </RelativeLayout>
    
</RelativeLayout>
