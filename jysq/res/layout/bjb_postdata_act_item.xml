<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFFFF"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/opfull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            android:padding="10dp"
            android:src="@drawable/btn_open1" />

        <Button
            android:id="@+id/opget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_weight="1.14"
            android:background="#00000000"
            android:src="@drawable/btn_open1"
            android:text="添加\n笔记"
            android:textColor="@color/font_color_blue"
            android:textSize="@dimen/Text_size_small_0" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="10px"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/opfull"
            android:gravity="center_vertical"
            android:text="大家行行"
            android:textColor="#FF000000"
            android:textSize="@dimen/Text_size_middle_1" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fullinfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/split1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@color/font_color_gray_small2" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:gravity="center_vertical"
            android:text="大家行行好！给点倩倩吧！！"
            android:textColor="#FF000000"
            android:textSize="@dimen/Text_size_middle_1" />

        <ImageView
            android:id="@+id/split2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@color/font_color_gray_small2" />

        <TextView
            android:id="@+id/mem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:gravity="center_vertical"
            android:text="大家行行好！给点倩倩吧！！"
            android:textColor="#FF000000"
            android:textSize="@dimen/Text_size_middle_1" />
    </LinearLayout>

</LinearLayout>