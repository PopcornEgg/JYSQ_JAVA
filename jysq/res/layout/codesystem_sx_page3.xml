<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="年级"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#8F000000"
        android:textSize="@dimen/Text_size_big_1" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <Button
                android:id="@+id/Button01"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/font_color_gray"
                android:contentDescription="btnsTop"
                android:tag="0"
                android:text="全部"
                android:textColor="@color/def_background"
                android:textSize="@dimen/Text_size_big_1" />

            <Button
                android:id="@+id/Button02"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/font_color_gray"
                android:contentDescription="btnsTop"
                android:tag="1"
                android:text="全部"
                android:textColor="@color/def_background"
                android:textSize="@dimen/Text_size_big_1" />

            <Button
                android:id="@+id/Button03"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/font_color_gray"
                android:contentDescription="btnsTop"
                android:gravity="center"
                android:tag="2"
                android:text="全部"
                android:textColor="@color/def_background"
                android:textSize="@dimen/Text_size_big_1" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:gravity="center" >

            <Button
                android:id="@+id/Button04"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/font_color_gray"
                android:contentDescription="btnsTop"
                android:tag="3"
                android:text="全部"
                android:textColor="@color/def_background"
                android:textSize="@dimen/Text_size_big_1" />

            <Button
                android:id="@+id/Button05"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/font_color_gray"
                android:contentDescription="btnsTop"
                android:tag="4"
                android:text="全部"
                android:textColor="@color/def_background"
                android:textSize="@dimen/Text_size_big_1" />

            <Button
                android:id="@+id/Button06"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/font_color_gray"
                android:contentDescription="btnsTop"
                android:tag="5"
                android:text="全部"
                android:textColor="@color/def_background"
                android:textSize="@dimen/Text_size_big_1" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/headTitle"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/time"
        android:layout_centerHorizontal="true"
        android:background="@color/font_color_gray"
        android:src="@drawable/abc_ab_share_pack_holo_light"
        android:text="10"
        android:textColor="@color/def_background"
        android:textSize="@dimen/Text_size_big_2" />

</RelativeLayout>